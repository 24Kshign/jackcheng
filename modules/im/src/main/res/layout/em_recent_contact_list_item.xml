<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@android:color/white"
    android:minHeight="65dp"
    android:paddingLeft="15dp">

    <ImageView
        android:id="@+id/list_item_message_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:descendantFocusability="blocksDescendants"
        android:src="@drawable/ic_launcher" />


    <ImageView
        android:id="@+id/mlc_iv_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/icon_dot_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/list_item_message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@id/list_item_message_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_black_light"
        android:textSize="@dimen/text_size_big" />

    <TextView
        android:id="@+id/list_item_message_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/list_item_message_title"
        android:layout_below="@id/list_item_message_title"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/text_size_content" />

    <TextView
        android:id="@+id/list_item_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/text_size_annotation" />

    <View
        style="@style/divider_horizontal_line_style"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
